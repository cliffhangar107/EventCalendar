<%= form_for Event.new(start_date: Time.now + 2.days) do |f| %>
	<fieldset>
		<legend>New Event</legend>

		<div class='row'>
			<div class="large-12 columns">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
		</div>

		<div class='row'>
			<div class="large-6 columns">
        <%= f.label :start_date %>
        <%= f.text_field :start_date %>
      </div>
      <div class='large-6 columns'>
      	<%= f.label :end_date %>
      	<%= f.text_field :end_date %>
      </div>
		</div>

		<div class='row'>
			<div class='large-1 columns'>
				<%= f.submit class: 'tiny secondary button' %>
			</div>
		</div>
	</fieldset>
<% end %>